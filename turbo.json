{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "generated/**"
      ],
      "env": [
        "DATABASE_URL",
        "FAL_KEY",
        "WEBHOOK_BASE_URL",
        "S3_ACCESS_KEY",
        "S3_SECRET_KEY",
        "BUCKET_NAME",
        "ENDPOINT",
        "AUTH_JWT_KEY"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "check-types": {
      "dependsOn": [
        "^check-types"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}