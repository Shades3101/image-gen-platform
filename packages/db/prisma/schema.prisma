generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id             String         @id @default(uuid())
  username       String         @unique
  profilePicture String?
  createdAt      DateTime       @default(now())
  updateAt       DateTime       @updatedAt
  models         Model[]
  outputImages   OutputImages[]
}

model Model {
  id             String          @id @default(uuid())
  name           String
  age            Int
  bald           Boolean
  userId         String
  triggerWord    String?
  tensorPath     String?
  thumbnail      String?
  createdAt      DateTime        @default(now())
  updateAt       DateTime        @updatedAt
  zipUrl         String
  open           Boolean         @default(false)
  type           ModelTypeEnum
  ethnicity      EthnicityEnum
  eyeColor       EyeColorEnum
  trainingStatus ModelStatusEnum @default(Pending)
  outputImages   OutputImages[]
  user           User            @relation(fields: [userId], references: [id])

  @@index([userId])

}

model OutputImages {
  id        String                @id @default(uuid())
  imageUrl  String                @default("")
  modelId   String
  userId    String
  prompt    String
  createdAt DateTime              @default(now())
  updateAt  DateTime              @updatedAt
  status    OutputImageStatusEnum @default(Pending)
  user      User                  @relation(fields: [userId], references: [id])
  model     Model                 @relation(fields: [modelId], references: [id])

  @@index([userId, modelId])
}

model Packs {
  id          String        @id @default(uuid())
  name        String
  description String        @default("")
  imageUrl1   String        @default("")
  imageUrl2   String        @default("")
  prompts     PackPrompts[]
}

model PackPrompts {
  id     String @id @default(uuid())
  prompt String
  packId String
  pack   Packs  @relation(fields: [packId], references: [id])

  @@index([packId])
}

enum ModelStatusEnum {
  Pending
  Generated
  Failed
}

enum OutputImageStatusEnum {
  Pending
  Generated
  Failed
}

enum EyeColorEnum {
  Brown
  Blue
  Gray
  Hazel
}

enum EthnicityEnum {
  White
  Black
  AsianAmerican  @map("Asian American")
  EastAsian      @map("East Asian")
  SouthEastAsian @map("South East Asian")
  SouthAsian     @map("South Asian")
  MiddleEastern  @map("Middle Eastern")
  Pacific
  Hispanic
}

enum ModelTypeEnum {
  Man
  Woman
  Others
}
